@model RestaurantApp.MVC.ViewModels.WarehouseItems.CreateWarehouseItemViewModel
@{
    ViewData["Title"] = "Изменение";
}

<h1>Изменение склада</h1>

<h4>Склад</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Provider" class="control-label"></label>
                <input asp-for="Provider" class="form-control" />
                <span asp-validation-for="Provider" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expenses" class="control-label"></label>
                <input asp-for="Expenses" class="form-control" />
                <span asp-validation-for="Expenses" class="text-danger"></span>
            </div>
            <h3>Товар</h3>
            <div class="form-group">
                @for (int i = 0; i < Model.Products.Count; i++)
                {
                    <input type="hidden" asp-for="@Model.Products[i].Value" />
                    <input asp-for="Products[i].Selected" /> @Model.Products[i].Text
                }
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

