@using System.Security.Claims
@model RestaurantApp.MVC.ViewModels.Users.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
<div>
    <form asp-action="Edit" asp-controller="Users" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label">Email</label>
            <input type="text" asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="BirthYear" class="control-label">Год рождения</label>
            <input type="number" asp-for="BirthYear" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
        </div>
    </form>
</div>
<div>
    <form method="post" asp-controller="Account" asp-action="Logout">
        <a class="btn btn-sm btn-primary" asp-controller="Account" asp-action="ChangePassword" asp-route-id="@User.Claims.Where(c => c.Type == ClaimTypes.NameIdentifier).First().Value">Сменить пароль</a>
    </form>
</div>