@model IEnumerable<RestaurantApp.Data.Models.Domain.Branch>

@{
    ViewData["Title"] = "Список филиалов";
}

<h1>Список филиалов</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                Сотрудник
            </th>
            <th>
                Склад
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @{
                        var name = string.Format("{0} {1}", item.Employer.LastName, item.Employer.FirstName);
                        @Html.DisplayFor(modelItem => name)
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WarehouseItem.Address)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
