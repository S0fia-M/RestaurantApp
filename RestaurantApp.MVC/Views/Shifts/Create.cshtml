@model RestaurantApp.MVC.ViewModels.Shifts.CreateShiftViewModel

@{
    ViewData["Title"] = "Добавление";
}

<h1>Добавить смену</h1>

<h4>Смена</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Profit" class="control-label"></label>
                <input asp-for="Profit" class="form-control" />
                <span asp-validation-for="Profit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShiftDate" class="control-label"></label>
                <input asp-for="ShiftDate" class="form-control" type="date" />
                <span asp-validation-for="ShiftDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployerId" class="control-label">Сотрудник</label>
                <select asp-for="EmployerId" class="form-control" asp-items="ViewBag.EmployerId"></select>
            </div>
            <h3>Заказы</h3>
            <div class="form-group">
                @for (int i = 0; i < Model.Orders.Count; i++)
                {
                    <input type="hidden" asp-for="@Model.Orders[i].Value" />
                    <input asp-for="Orders[i].Selected" /> @Model.Orders[i].Text
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

