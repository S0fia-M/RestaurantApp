@model RestaurantApp.MVC.ViewModels.Orders.CreateOrderViewModel

@{
    ViewData["Title"] = "Изменение";
}

<h1>Изменение заказа</h1>

<h4>Заказ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderId" />
            <div class="form-group">
                <label asp-for="OrderId" class="control-label">Номер заказа</label>\
                <input asp-for="OrderId" class="form-control" disabled />
            </div>
            <h3>Меню</h3>
            <div class="form-group">
                @for (int i = 0; i < Model.MenuItems.Count; i++)
                {
                    <input type="hidden" asp-for="@Model.MenuItems[i].Value" />
                    <input asp-for="MenuItems[i].Selected" /> @Model.MenuItems[i].Text
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

