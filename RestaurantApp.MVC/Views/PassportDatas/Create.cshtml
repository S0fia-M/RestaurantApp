@model RestaurantApp.MVC.ViewModels.PassportData.CreatePassportDataViewModel
@{
    ViewData["Title"] = "Добавление";
}
<h1>Добавление паспортных данных</h1>
<form asp-action="Create" asp-controller="PassportDatas">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="PassportSeries" class="control-label">Серия паспорта</label>
        <input type="text" asp-for="PassportSeries" class="form-control" />
    </div>
        <div class="form-group">
        <label asp-for="PassportNumber" class="control-label">Номер паспорта</label>
        <input type="text" asp-for="PassportNumber" class="form-control" />
    </div>
        <div class="form-group">
        <label asp-for="Gender" class="control-label">Пол</label>
        <input type="text" asp-for="Gender" class="form-control" />
    </div>
        <div class="form-group">
        <label asp-for="PlaceOfBirth" class="control-label">Место рождения</label>
        <input type="text" asp-for="PlaceOfBirth" class="form-control" />
    </div>
        <div class="form-group">
        <label asp-for="IssuedBy" class="control-label">Кем выдан</label>
        <input type="text" asp-for="IssuedBy" class="form-control" />
    </div>
        <div class="form-group">
        <label asp-for="DepartmentCode" class="control-label">Код подразделения</label>
        <input type="text" asp-for="DepartmentCode" class="form-control" />
    </div>
            <div class="form-group">
        <label asp-for="BirthDate" class="control-label">Дата рождения</label>
        <input type="date" asp-for="BirthDate" class="form-control" />
    </div>
            <div class="form-group">
        <label asp-for="IssuedDate" class="control-label">Дата выдачи</label>
        <input type="date" asp-for="IssuedDate" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-outline-secondary" />
    </div>
</form>
